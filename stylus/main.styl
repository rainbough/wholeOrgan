
@import url('http://fonts.googleapis.com/css?family=Muli|Open+Sans:400italic,300,400,600');



// declare some fonts
open = 'Open Sans', sans-serif;
muli = 'Muli', sans-serif;

// declare some colors 
blue = #1c8098
red = #d54747
orange = #f26533
green = #8cca38

// declare some font weights
normal = 400
light = 300
heavy = 600

/* MEDIA QUERY GUIDE 
Large devices — desktops, 1200px and up
Medium devices — desktops, 992px and up
Small devices — tablets, 768px and up
XS devices — less than 768px
*/


/* ======================== true style begins y0 ======================== */
*, body, html
	margin 0px
	padding 0px

.homePage
	background url(/images/bigliverbg.png) right -70% no-repeat

html, body
	height 100%

#wrap
	min-height 100%
	height auto !important
	height 100%
	/* Negative indent footer by its height */
	margin: 0 auto -60px
	/* Pad bottom by footer height */
	padding: 0 0 250px


// default headers
h1, h2, h3, h4, h5, h6
	font-family open
	color #333
	margin 0
	padding 0
	font-weight 400


h1
	font-size 36px
	font-weight light
	line-height 1.2
	color #666

	&.blue
		color blue

	span.heavy
		font-weight normal
		display inline-block


h2
	font-size 26px
	font-family open
	font-weight light
	line-height 1.3
	display inline-block

	// everything over 768px (tablet screens)
	@media handheld, screen and (min-width: 768px)
		font-size 26px

	// everything over 992px (medium screens)
	@media handheld, screen and (min-width: 992px)
		font-size 30px

	// everything over 1200px (large screens)
	@media handheld, screen and (min-width: 1200px)
		font-size 36px

	&.blue
		padding-bottom 2px
		border-bottom 1px solid blue

	&.orange
		padding-bottom 2px
		border-bottom 1px solid orange

	span.heavy
		font-weight normal
		display inline

h3
	font-size 28px
	font-weight light
	line-height 1.5

h4
	font-family muli
	font-size 22px
	line-height 1.5
	color #6d6d6d

	&.orange
		color orange

h5
	font-family muli
	font-size 24px
	line-height 1.5
	color orange

h6
	font-family muli
	font-size 18px
	text-transform uppercase
	color #888

	.orange
		color orange

	.bigger
		font-size 22px



// default paragraph
p
	font-size 16px
	font-family muli
	font-weight normal
	line-height 1.7
	color #333
	margin-top 20px

	&.bigger
		color #666
		font-size 19px
		font-family muli
		font-weight normal

		// everything over 768px (tablet screens)
		@media handheld, screen and (min-width: 768px)
			font-size 18px

		// everything over 992px (tablet screens)
		@media handheld, screen and (min-width: 992px)
			font-size 19px

		// everything over 1200px (large screens)
		@media handheld, screen and (min-width: 1200px)
			font-size 19px

	&.clean
		margin 0

	&.orange
		color orange

	&.dark
		color #222

	em
		font-family open
		font-style oblique
		font-weight normal


// default links
a
	color orange
	padding-bottom 2px
	border-bottom 1px solid #ddd

	&:hover
		text-decoration none
		color darken(orange, 20%)
		border-bottom 1px solid #ccc

	&.blue
		color lighten(#11535f, 20%)

		&:hover
			color lighten(#11535f, 30%)

border-radius(arg)
	-webkit-border-radius arg
	-moz-border-radius arg
	border-radius arg
	behavior url(/pie/PIE.htc)

background-gen(color)
	background-color color
	&:hover
		background-color lighten(color, 7%)


// ============================ STANDARD FORM
