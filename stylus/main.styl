
@import url('http://fonts.googleapis.com/css?family=Roboto:400,500,400italic,700,300|Pontano+Sans');



// declare some fonts
pontano = 'Pontano Sans', sans-serif;
roboto = 'Roboto', sans-serif;

// declare some colors 
blue = #41a1e2
red = #d54747
orange = #f05c39
green = #8cca38

// declare some font weights
normal = 400
light = 300
heavy = 600

/* MEDIA QUERY GUIDE 
Large devices — desktops, 1200px and up
Medium devices — desktops, 992px and up
Small devices — tablets, 768px and up
XS devices — less than 768px
*/


/* ======================== true style begins y0 ======================== */
*, body, html
	margin 0px
	padding 0px

html, body
	height 100%

#wrap
	min-height 100%
	height auto !important
	height 100%
	/* Negative indent footer by its height */
	margin: 0 auto -60px
	/* Pad bottom by footer height */
	padding: 0 0 250px


// default headers
h1, h2, h3, h4, h5, h6
	font-family roboto
	color #333
	margin 0
	padding 0
	font-weight 400


h1
	font-size 36px
	font-weight light
	line-height 1.3


h2
	font-size 24px
	padding-bottom 14px
	border-bottom 2px solid orange
	display inline-block

	&.blue
		border-bottom 2px solid blue

span.main
	font-family pontano
	font-size 24px
	display block


// default paragraph
p
	font-size 15px
	font-family roboto
	font-weight normal
	line-height 1.7
	color #333

	&.bigger
		color #666
		font-size 17px
		font-family roboto
		font-weight normal


// default links
a
	color orange

	&:hover
		text-decoration none

border-radius(arg)
	-webkit-border-radius arg
	-moz-border-radius arg
	border-radius arg

background-gen(color)
	background-color color
	&:hover
		background-color lighten(color, 7%)

// ============================ STANDARD FORM
form
	margin-left 0

	@media handheld, screen and (min-width: 600px)
		margin-left 0

	@media handheld, screen and (min-width:768px)
		margin-left 0

	@media handheld, screen and (min-width: 992px)
		margin-left 7%

	textarea
		width 100%
		max-width 100%
		height 200px
		max-height 200px
		background-color #fafafa
		border none
		border-radius(3px)
		outline none
		padding 20px
		box-shadow inset 0px 2px 1px #eaeaea

	label
		color red
		font-family pontano
		font-size 15px
		padding 15px 0

		&.skinny
			padding-bottom 0

	// default input
	input
		background-color #fafafa
		border none
		border-radius(3px)
		font-family pontano
		font-size 16px
		box-shadow inset 0px 2px 1px #eaeaea
		width 100%
		margin 0

	input[type=checkbox]
		border none
		box-shadow none
		display inline-block
		width auto !important

	input[type=text]
		padding 15px 20px

	.help-block
		margin-top -18px
		color #bbb
		font-style oblique

		&:hover
			cursor pointer
			color #888

// ============================ LINKS		
a.button, button
	padding 16px 45px
	background-color #333 // default color
	font-weight light
	letter-spacing 1px

	box-shadow none
	border none
	outline none

	font-family roboto
	color #fff
	font-size 18px

	border-radius(3px)

	&:hover
		background-color lighten(#333, 20%)

	&:active
		position relative
		top 1px

	&.small
		padding 10px 40px

	&.long
		padding 14px 65px

	&.fluid
		display inline-block
		padding 10px
		width 100%
		max-width 300px

	&.blue
		background-gen(blue)

	&.orange
		background-gen(orange)

	&.green
		background-gen(green)

	&.teal
		background-gen(#2aba97)

	&.red
		background-gen(#e44845)

	&.gray
		background-gen(#ccc)

	&.white
		background-gen(#fff)
		color #333


// ============================ DEFAULT HEAD + SUBHEAD
span.subhead
	font-size 18px
	color #888

	&.large
		font-size 24px
		font-family pontano



// ============================ HEADER STYLES
.header
	margin 0px
	background url(/images/nav_bg.png)
	height 84px

	.main
		padding-top 30px

	.logo
		height 35px
		background url(/images/wo_logo.png) no-repeat 
		background-size 83%

		&:hover
			opacity .9

	// everything over 1200px (large screens)
	@media handheld, screen and (min-width: 1200px)
		.logo
			background-size 100%

	
	// everything over 992px (medium screens)
	@media handheld, screen and (min-width: 992px)
		.logo
			background-size 243px
	
	
	// everything over 768px (tablet screens)
	@media handheld, screen and (min-width: 768px)
		.main
			padding-top 20px

		.logo
			margin-top 10px

	
	// 768px and thinner (mobile devices)
	@media handheld, screen and (max-width: 768px)
		height auto
		background none
		background-color #f2f2f2

		.main
			padding-top 0
			margin auto
		.logo
			height 90px
			background url(/images/wo_logo.png) no-repeat 
			background-size 250px
			background-position center center

	
	// ============================ MAIN style nav, responsive
	ul.nav
		float right

		// 768px and thinner (mobile devices)
		@media handheld, screen and (max-width: 768px)
			float left
			text-align center
			display block
			margin-bottom 30px
			display none

		// strip bootstrap styles
		a
			padding 0
			margin 0
			background none


		// list items are blocks with headers and subheads
		li
			display inline-block
			float left
			margin-left 50px
			margin-top 5px

			span.head
				font-size 15px
				font-family roboto
				color #555
				display block

			span.subhead
				font-size 12px
				color #aaa

			// 992px and thinner
			@media handheld, screen and (max-width: 992px)
				margin-top 13px

				span.head
					&:hover
						color blue

				span.subhead
					display none

			
			// 768px and thinner
			@media handheld, screen and (max-width: 768px)
				margin 7px 25px 0 0

				span.head
					font-size 14px
					&:hover
						color blue

				span.subhead
					display none

			&:hover
				h1
					color #333

				span.subhead
					color blue

	// ============================ MOBILE style nav
	ul.nav_mob
		display none
		text-align center
		list-style-type none
		margin-bottom 20px
		margin-top 0

		li, li a
			display inline
			margin 0
			font-size 13px
			padding 5px
			color #333

			&.standout
				font-weight heavy

		@media handheld, screen and (max-width:768px)
			display block


